<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_button_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_data_type"
            style="@style/VivantTitle"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="---"
            android:textColor="@color/dark_gold"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_data_value"
            style="@style/VivantTitle"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:gravity="bottom|center_vertical"
            android:text="---"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txt_data_type"
            app:layout_constraintTop_toBottomOf="@+id/txt_data_type" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_data_unit"
            style="@style/VivantDescription"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:gravity="bottom|center_vertical"
            android:text=""
            android:textSize="@dimen/_11sdp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_data_value"
            app:layout_constraintStart_toEndOf="@+id/txt_data_value"
            app:layout_constraintTop_toTopOf="@+id/txt_data_value" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>