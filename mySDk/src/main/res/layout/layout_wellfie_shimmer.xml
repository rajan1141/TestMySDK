<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_last_updated_shimmer"
                style="@style/VivantDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_17sdp"
                android:background="@color/shimmerColor"
                android:text="@string/LAST_SCANNED"
                android:textColor="@color/shimmerColor"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toStartOf="@+id/txt_last_updated_shimmer"
                app:layout_constraintStart_toEndOf="@+id/img_scan_vitals_shimmer"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_last_updated_shimmer"
                style="@style/VivantTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:background="@color/shimmerColor"
                android:text="@string/LAST_SCANNED"
                android:textColor="@color/shimmerColor"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@+id/lbl_last_updated_shimmer"
                app:layout_constraintStart_toEndOf="@+id/lbl_last_updated_shimmer"
                app:layout_constraintTop_toTopOf="@+id/lbl_last_updated_shimmer" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_scan_vitals_shimmer"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/circle_bg_shimmer"
                android:tint="@color/shimmerColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_oxygen_level_shimmer"
                style="@style/VivantDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/shimmerColor"
                android:text="@string/LAST_SCANNED"
                android:textColor="@color/shimmerColor"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="@+id/lbl_last_updated_shimmer"
                app:layout_constraintTop_toBottomOf="@+id/lbl_last_updated_shimmer" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_oxygen_level_shimmer"
                style="@style/VivantTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:background="@color/shimmerColor"
                android:text="@string/LAST_SCANNED"
                android:textColor="@color/shimmerColor"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@+id/lbl_oxygen_level_shimmer"
                app:layout_constraintStart_toEndOf="@+id/lbl_oxygen_level_shimmer"
                app:layout_constraintTop_toTopOf="@+id/lbl_oxygen_level_shimmer" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_stress_level_shimmer"
                style="@style/VivantDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/shimmerColor"
                android:text="@string/LAST_SCANNED"
                android:textColor="@color/shimmerColor"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="@+id/lbl_oxygen_level_shimmer"
                app:layout_constraintTop_toBottomOf="@+id/lbl_oxygen_level_shimmer" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_stress_level_shimmer"
                style="@style/VivantTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:background="@color/shimmerColor"
                android:text="@string/LAST_SCANNED"
                android:textColor="@color/shimmerColor"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@+id/lbl_stress_level_shimmer"
                app:layout_constraintStart_toEndOf="@+id/lbl_stress_level_shimmer"
                app:layout_constraintTop_toTopOf="@+id/lbl_stress_level_shimmer" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_rescan_shimmer"
                style="@style/CustomButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:backgroundTint="@color/shimmerColor"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/RESCAN_YOUR_VITALS"
                android:textColor="@color/shimmerColor"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="@+id/lbl_stress_level_shimmer"
                app:layout_constraintTop_toBottomOf="@+id/lbl_stress_level_shimmer" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/vivant_disabled"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_scan_vitals_shimmer" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_scan_vitals_shimmer">

                <include
                    android:id="@+id/item_wellfie_shimmer1"
                    layout="@layout/item_wellfie_dashboard_shimmer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintEnd_toStartOf="@+id/item_wellfie_shimmer2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <include
                    android:id="@+id/item_wellfie_shimmer2"
                    layout="@layout/item_wellfie_dashboard_shimmer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/item_wellfie_shimmer1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/item_wellfie_shimmer1"
                    app:layout_constraintTop_toTopOf="@+id/item_wellfie_shimmer1" />

                <include
                    android:id="@+id/item_wellfie_shimmer3"
                    layout="@layout/item_wellfie_dashboard_shimmer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintEnd_toStartOf="@+id/item_wellfie_shimmer4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item_wellfie_shimmer1" />

                <include
                    android:id="@+id/item_wellfie_shimmer4"
                    layout="@layout/item_wellfie_dashboard_shimmer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/item_wellfie_shimmer3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/item_wellfie_shimmer3"
                    app:layout_constraintTop_toTopOf="@+id/item_wellfie_shimmer3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>