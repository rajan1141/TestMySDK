<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_option"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_border_disabled"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginTop="@dimen/_10sdp"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:paddingStart="@dimen/_5sdp"
    android:paddingEnd="@dimen/_5sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_check"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:visibility="visible"
        android:src="@drawable/ic_radio_button_unchecked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_plan_name"
        app:layout_constraintBottom_toBottomOf="@+id/txt_policy_number"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_plan_name"
        style="@style/VivantDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/DASH_3"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/textViewColor"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintStart_toEndOf="@+id/img_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_policy_number"
        style="@style/VivantTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/DASH_3"
        android:textSize="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_1sdp"
        app:layout_constraintStart_toStartOf="@+id/txt_plan_name"
        app:layout_constraintEnd_toEndOf="@+id/txt_plan_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_plan_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>