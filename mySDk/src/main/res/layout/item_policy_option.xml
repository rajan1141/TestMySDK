<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_policy_option"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/_1sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_policy_option"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/img_sudlife_logo"
        android:scaleType="centerCrop"
        android:foregroundGravity="center"
        android:padding="@dimen/_5sdp"
        android:layout_margin="@dimen/_2sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_policy_option"
        style="@style/VivantDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/WEBSITE_BOT"
        android:textColor="@color/textViewColor"
        android:textSize="@dimen/_11sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        app:layout_constraintEnd_toStartOf="@+id/img_policy_option"
        app:layout_constraintTop_toTopOf="@+id/img_policy_option"
        app:layout_constraintBottom_toBottomOf="@+id/img_policy_option"/>

</androidx.constraintlayout.widget.ConstraintLayout>