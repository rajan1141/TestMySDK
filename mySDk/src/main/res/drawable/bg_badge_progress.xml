<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <stroke
                android:width="@dimen/_2sdp"
                android:color="@color/vivantInactive" />
            <corners android:radius="@dimen/_3sdp" />
            <gradient
                android:angle="270"
                android:centerColor="@color/vivantInactive"
                android:centerY="1.0"
                android:endColor="@color/vivantInactive"
                android:startColor="@color/vivantInactive" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/_3sdp" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/vivantActive"
                    android:centerY="1.0"
                    android:endColor="@color/vivantActive"
                    android:startColor="@color/vivantActive" />
            </shape>
        </clip>
    </item>
</layer-list>